<header>
 <h1>New feature</h1>
</header>

<form id="new-feature" name="project">
	<fieldset>
		<div class="clearfix">
	    	<label for="name">Name</label>
	        <div class="input">
	        	<input type="text" class="xlarge" name="name" id="name" value="<%= name %>" >
	        </div>
		</div>
		<div class="clearfix">
	    	<label for="description">Description</label>
	        <div class="input">
				<textarea class="xxlarge" cols="40" id="description" name="description" rows="3"><%= description %></textarea>
				<span class="help-block">
					Add a description to the feature.
				</span>
	        </div>
		</div>
		</fieldset>
	<div class="actions">
		<input type="submit" value="Create Feature" class="btn primary" />
		<a class="btn" href="#/<%= project_id %>">Cancel</a>
	</div>
</form>