<header>
  <h1>
  <%= name %> 
  </h1>
</header>

<form id="edit-feature" name="feature">
	<fieldset>
		<div class="clearfix">
			<label for="name">Name</label>
			<div class="input">
    			<input type="text" name="name" value="<%= name %>" autocomplete="off" class="xlarge">
    		</div>
		</div>
		<div class="clearfix">
	    	<label for="description">Description</label>
	        <div class="input">
				<textarea class="xxlarge" cols="40" name="description" rows="3"><%= description %></textarea>
				<span class="help-block">
					Add a description to the feature.
				</span>
			</div>
  		</div>
  </fieldset>
    <div class="actions">
		<input class="btn primary" name="commit" type="submit" value="Save change">
		<a href="#/<%= project_id %>/features/<%= id %>" class="btn">Cancel</a>
	</div>
</form>